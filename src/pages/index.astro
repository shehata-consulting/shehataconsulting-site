---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Socials from "@/components/Socials.astro";
import LinkButton from "@/components/LinkButton.astro";
import IconRss from "@/assets/icons/IconRss.svg";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import { SITE } from "@/config";
import { SOCIALS } from "@/constants";
---

<Layout>
  <Header />
  <main id="main-content" data-layout="index" class="app-layout">
    <section id="hero" class:list={["pt-8 pb-6", "border-b border-border"]}>
      <h1 class="my-4 inline-block text-4xl font-bold sm:my-8 sm:text-5xl">
        Shehata Tech Solutions
      </h1>
      <a
        target="_blank"
        href="/rss.xml"
        class="inline-block"
        aria-label="rss feed"
        title="RSS Feed"
      >
        <IconRss
          width={20}
          height={20}
          class="scale-125 stroke-accent stroke-3 rtl:-rotate-90"
        />
        <span class="sr-only">RSS Feed</span>
      </a>

      <p class="my-4">
        Enterprise-Grade AI Implementation & Automation. We move you beyond "chatbots" to intelligent workflows that drive revenue.
      </p>
      <p class="mt-2">
        Read the blog posts or check
        <LinkButton
          class="underline decoration-dashed underline-offset-4 hover:text-accent"
          href="https://github.com/satnaing/astro-paper#readme"
        >
          README
        </LinkButton> for more info.
      </p>
      {
        // only display if at least one social link is enabled
        SOCIALS.length > 0 && (
          <div class="mt-4 flex max-sm:flex-col sm:items-center">
            <div class="me-2 mb-1 whitespace-nowrap sm:mb-0">Social Links:</div>
            <Socials />
          </div>
        )
      }
    </section>

<section id="services" class="pb-6 pt-12">
        <h2 class="text-2xl font-bold tracking-wide sm:text-3xl">
          Services
        </h2>
        <div class="mt-6 grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
          
          <div class="rounded-lg border border-skin-line p-6 shadow-sm">
            <h3 class="text-lg font-semibold text-skin-accent">RAG & Knowledge Retrieval</h3>
            <p class="mt-2 text-sm text-skin-base">
              Stop wasting hours searching for answers. We build secure pipelines (Pinecone, Gemini) that let your team "chat" with internal data instantly.
            </p>
          </div>

          <div class="rounded-lg border border-skin-line p-6 shadow-sm">
            <h3 class="text-lg font-semibold text-skin-accent">Intelligent Automation</h3>
            <p class="mt-2 text-sm text-skin-base">
              Autonomous agents that read, categorize, and act on data streams. We automate the boring stuff so you can focus on strategy.
            </p>
          </div>

          <div class="rounded-lg border border-skin-line p-6 shadow-sm">
            <h3 class="text-lg font-semibold text-skin-accent">AI Strategy Audits</h3>
            <p class="mt-2 text-sm text-skin-base">
              A 2-week deep dive into your infrastructure to identify high-ROI AI opportunities and flag security risks before you build.
            </p>
          </div>

        </div>
      </section>
      <hr class="border-skin-line" />

<section id="contact" class="pb-6 pt-12">
      <div class="mx-auto max-w-3xl text-center">
        <h2 class="text-2xl font-bold tracking-wide sm:text-3xl">
          Start the Conversation
        </h2>
        <p class="mt-4 text-lg text-skin-base">
          Have a project in mind? Let's discuss how we can build it.
        </p>
      </div>

      <form 
        action="https://api.web3forms.com/submit" 
        method="POST" 
        class="mx-auto mt-10 max-w-xl rounded-lg border border-skin-line p-8 shadow-sm bg-skin-card"
      >
        <input type="hidden" name="access_key" value="12ef53cd-37d3-4a2f-8c60-96542dfc1635">

        <input type="checkbox" name="botcheck" class="hidden" style="display: none;">

        <div class="grid grid-cols-1 gap-6">
          <label class="block">
            <span class="text-skin-base font-medium">Full Name</span>
            <input 
              type="text" 
              name="name" 
              class="mt-1 block w-full rounded-md border-skin-line bg-skin-fill px-4 py-2 text-skin-base focus:border-skin-accent focus:ring-skin-accent" 
              placeholder="Michael Shehata" 
              required
            />
          </label>

          <label class="block">
            <span class="text-skin-base font-medium">Email Address</span>
            <input 
              type="email" 
              name="email" 
              class="mt-1 block w-full rounded-md border-skin-line bg-skin-fill px-4 py-2 text-skin-base focus:border-skin-accent focus:ring-skin-accent" 
              placeholder="shehatam.dev@gmail.com" 
              required
            />
          </label>

          <label class="block">
            <span class="text-skin-base font-medium">Message</span>
            <textarea 
              name="message" 
              rows="4" 
              class="mt-1 block w-full rounded-md border-skin-line bg-skin-fill px-4 py-2 text-skin-base focus:border-skin-accent focus:ring-skin-accent" 
              placeholder="Tell me about your project..." 
              required
            ></textarea>
          </label>

          <button 
            type="submit" 
            class="mt-4 w-full rounded-lg bg-skin-accent px-6 py-3 font-bold text-skin-inverted transition hover:opacity-90"
          >
            Send Message
          </button>
        </div>
      </form>
    </section>
      <hr class="border-skin-line" />
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const indexLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/");
    }
  });
</script>
